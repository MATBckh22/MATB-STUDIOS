def permute_a_palindrome(input):
    print(input)
    if input == input[::-1]:
        return True
    else:
        counter = 0
        permutations = {i : input.count(i) for i in set(input)}
        for i in range(len(permutations)):
            if permutations.get(i, i) > 3:
                return False
            elif permutations == 1:
                counter += 1
                if counter > 1:
                    return False
            else:
                return True